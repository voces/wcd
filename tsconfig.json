{
	"compilerOptions": {
		"declaration": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext", "dom"],
		"jsx": "preserve",
		"jsxFactory": "React.createElement",
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext",
		"types": [ "@types/jest", "@types/node" ]
	},
	"include": ["scripts", "src"],
	"exclude": ["node_modules"]
}
